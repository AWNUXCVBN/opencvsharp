{
  "version": "1.0.0-*",

  "dependencies": {
    "OpenCvSharp": "1.0.0-*",
    "OpenCvSharp.Blob": "1.0.0-*"
  },

  "runtimes": {
    "win10-x64": {}
  },

  "frameworks": {
    "net461": {
      "dependencies": {
        "OpenCvSharp.Extensions": "1.0.0-*"
      },
      "frameworkAssemblies": {
        "System.Drawing": "4.0.0.0"
      },
      "buildOptions": {
        "define": [ "DOTNET_FRAMEWORK", "net46" ]
      }
    }
  },

  "buildOptions": {
    "optimize": true,
    "allowUnsafe": true,
    "emitEntryPoint": true
  },

  "publishOptions": {
    "include": [ "dll/**/*.dll" ]
  }
}
